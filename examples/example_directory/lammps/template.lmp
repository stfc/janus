###############################################################################
# MD simulation
###############################################################################

###############################################################################
# VARIABLES
###############################################################################
clear
# Configuration files
variable cfgFile         string "lammps.data"
# Timesteps
variable numSteps        equal  5
variable dt              equal  0.0005
# Masses
variable mass_C          equal  12.011
variable mass_H          equal  1.00794
variable mass_O          equal  15.9994

###############################################################################
# GENERAL SETUP
###############################################################################
units electron
boundary p p p
atom_style atomic
read_data ${cfgFile}
mass 1 ${mass_C}
mass 2 ${mass_H}
mass 3 ${mass_O}
timestep ${dt}
thermo 1

###############################################################################
# NN
###############################################################################
{pair_commands}

###############################################################################
# INTEGRATOR
###############################################################################
fix INT all nve
dump 1 all atom 1 traj.dump

###############################################################################
# SIMULATION
###############################################################################
run ${numSteps}
