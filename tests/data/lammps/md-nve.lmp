###############################################################################
# MD simulation
###############################################################################

###############################################################################
# GENERAL SETUP
###############################################################################
units metal
boundary p p p
atom_style atomic
read_data "/home/vol00/scarf860/cc_placement/CC_HDNNP/examples/m_cresol/nvt_frames/lammps/lammps.data"
mass 1 12.011
mass 2 1.00794
mass 3 15.9994
timestep 0.0005
thermo 1
#replicate 2 2 2
###############################################################################
# NN
###############################################################################
pair_style nnp dir "/home/vol00/scarf860/cc_placement/CC_HDNNP/examples/m_cresol/nvt_frames/lammps/nnp"  showew no showewsum 10 resetew no maxew 100 emap "1:C,2:H,3:O" cflength 1.8897261258369282 cfenergy 0.03674932247495664
pair_coeff * * 6.351

###############################################################################
# INTEGRATOR
###############################################################################
fix INT all nve

dump            xyzmov all xyz 1 cresol_mov_nve.xyz
dump_modify    xyzmov element  O1 C7 H8 
dump 1 all atom 1 traj_nve.dump

###############################################################################
# SIMULATION
###############################################################################
run 500
